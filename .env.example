# Tautulli Configuration
TAUTULLI_URL=http://tautulli:8181
TAUTULLI_API_KEY=your-tautulli-api-key-here

# Application Settings
DAYS_BACK=7
LOG_LEVEL=INFO
TZ=Europe/Paris

# Execution Mode
# RUN_ONCE: Set to "true" for one-shot execution, "false" for scheduled mode (default: false)
RUN_ONCE=false

# CRON_SCHEDULE: Required when RUN_ONCE is false
# Examples: "0 9 * * *" (daily at 9 AM), "0 9 * * MON" (Mondays at 9 AM)
CRON_SCHEDULE=0 9 * * MON
