# =============================================================================
# Plex Releases Summary - Configuration
# =============================================================================
# Copy to config.yml and customize for your environment.
#
# Three ways to set values:
#   1. Static:        tautulli_url: http://tautulli:8181
#   2. Env variable:  tautulli_api_key: ${TAUTULLI_API_KEY}
#   3. File secret:   Set TAUTULLI_API_KEY=/path/to/file in docker-compose,
#                     then use: tautulli_api_key: ${TAUTULLI_API_KEY}
# =============================================================================

# Tautulli (Required)
tautulli_url: ${TAUTULLI_URL}
tautulli_api_key: ${TAUTULLI_API_KEY}

# Core Settings (Required)
days_back: 7

# Scheduling (Required if run_once=false)
cron_schedule: "0 0 * * *"  # Daily at midnight
run_once: false

# Discord (Optional - comment out to disable)
# discord_webhook_url: ${DISCORD_WEBHOOK_URL}

# Plex (Optional - auto-detected if not set)
plex_url: https://app.plex.tv
# plex_server_id: your-server-id

# Advanced (Optional)
log_level: INFO
# initial_batch_size: 1000

# =============================================================================
# Examples
# =============================================================================

# Development (static values):
# tautulli_url: http://localhost:8181
# tautulli_api_key: your_key_here
# days_back: 7
# run_once: true
# log_level: DEBUG

# Production (environment variables):
# tautulli_url: ${TAUTULLI_URL}
# tautulli_api_key: ${TAUTULLI_API_KEY}
# discord_webhook_url: ${DISCORD_WEBHOOK_URL}
# days_back: 14
# cron_schedule: "0 */12 * * *"
# run_once: false

# CRON Examples:
#   "0 0 * * *"    - Daily at midnight
#   "0 */6 * * *"  - Every 6 hours
#   "0 0 * * SUN"  - Weekly on Sunday
#   "0 0 1 * *"    - Monthly on 1st
